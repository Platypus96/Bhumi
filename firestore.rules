
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document.
    // This now compares the user's UID (their wallet address) with the resource's owner field.
    function isOwner(resource) {
      return request.auth.uid == resource.data.owner;
    }

    // Helper function to check if the user making the query is the owner.
    function isQueryOwner() {
      return request.auth.uid == request.query.where.owner;
    }

    // Helper function to check if the user is the designated registrar.
    // This now correctly checks the UID of the logged-in user.
    function isRegistrar() {
      return request.auth.uid == "0x8b66677CAe6466Db4fc485Dec748d9577D0eF000";
    }

    // Properties:
    match /properties/{propertyId} {
      // Allow create if the user's UID (wallet address) matches the owner field in the new document.
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.owner;
      
      // Allow anyone to read properties (for marketplace, public portal)
      allow read: if true;

      // Allow listing of properties for any authenticated user
      allow list: if isAuthenticated();
      
      // Allow update if user is the owner OR the registrar.
      allow update: if isAuthenticated() && (isOwner(resource) || isRegistrar());

      // Nobody can delete a property.
      allow delete: if false;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
