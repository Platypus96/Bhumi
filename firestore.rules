
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /artifacts/{appId}/public/data/properties/{document=**} {
      // Allow anyone to read (get, list) property data
      allow read: if true;
      // Only allow authenticated users to create or update properties
      allow write: if request.auth != null;
    }
  }
}
