
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for security rules
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(resource) {
      return request.auth.uid == resource.data.owner;
    }

    function isRegistrar() {
      // The registrar's wallet address is stored in an environment variable
      // For security rules, we need a way to check this role.
      // A common pattern is to have a 'registrars' collection.
      // Assuming a registrar document exists at /registrars/(registrar's wallet address)
      return exists(/databases/$(database)/documents/registrars/$(request.auth.uid));
    }
    
    // Properties can be read by anyone, but only modified by the owner or registrar
    match /artifacts/{appId}/public/data/properties/{parcelId} {
      allow read: if true;
      
      // CREATE: Only signed-in users can create a property, and they must be the owner.
      allow create: if isSignedIn() && request.resource.data.owner == request.auth.uid;
      
      // UPDATE:
      // 1. The user must be signed in.
      // 2. The owner can update their own property (e.g., list for sale).
      // 3. The registrar can update the status (verify/reject).
      allow update: if isSignedIn() && 
                      (
                        (isOwner(resource) && request.resource.data.owner == resource.data.owner) ||
                        (isRegistrar() && request.resource.data.status != resource.data.status)
                      );
                      
      // DELETE: No one can delete properties to maintain historical integrity.
      allow delete: if false;
    }

    // Fallback for any other collections
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
